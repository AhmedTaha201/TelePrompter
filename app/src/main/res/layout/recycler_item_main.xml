<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_item_main_margin_8dp"
    android:elevation="@dimen/card_elevation_main_4dp"
    app:cardCornerRadius="@dimen/card_radius_main_4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_main_file_name"
            style="@style/Base.TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_main_tv_4dp"
            android:textColor="@color/distinguished_text_color"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/tv_main_file_contents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="6"
            android:padding="@dimen/padding_main_tv_4dp"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/tv_main_file_date"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="4dp"
            android:textColor="@color/distinguished_text_color"
            tools:text="21/8/2018 21:05" />
    </LinearLayout>

</android.support.v7.widget.CardView>